<% if @current_user %>
  <li><%= link_to 'Logout', logout_path, class: "dropdown-item" %></li>
<% else %>
  <li><%= link_to 'Login', login_path, class: "dropdown-item" %></li>
  <li><hr class="dropdown-divider"></li>
  <li><%= link_to 'Sign up', sign_up_path, class: "dropdown-item" %></li>
<% end %>